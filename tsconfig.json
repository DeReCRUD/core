{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@de-re-crud/*": ["./packages/*"]
    },
    "target": "es5",
    "module": "esnext",
    "lib": ["es2015", "es2016", "es2017", "esnext", "dom"],
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDirs": [
      "./packages/*"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}