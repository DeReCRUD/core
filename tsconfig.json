{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "es2015",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDirs": ["./packages/*"],
    "typeRoots": ["node_modules/@types"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "dist", 
    "node_modules",
    "**/__tests__/**.ts",
    "**/__mocks__/**.ts"
  ]
}
