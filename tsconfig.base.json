{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./packages",
    "target": "es5",
    "module": "es2015",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "sourceMap": false,
    "typeRoots": ["node_modules/@types"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@de-re-crud/core": ["core/src"],
      "@de-re-crud/ui": ["ui/src"],
      "@de-re-crud/theme-bootstrap4": ["theme-bootstrap4/src"]
    }
  }
}
