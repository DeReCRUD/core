{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "clean": "del-cli packages/*/dist",
    "postinstall": "lerna bootstrap",
    "lint": "run-s format:check eslint:check",
    "eslint:check": "eslint --ext \".js,.ts,.tsx\" .",
    "build": "run-s clean build:packages",
    "build:packages": "lerna run build --stream --concurrency 1 --ignore @de-re-crud/storybook-*",
    "build:storybook": "lerna run build --stream --concurrency 1 --scope @de-re-crud/storybook-*",
    "test": "jest",
    "cover": "jest --coverage",
    "storybook": "lerna run storybook --stream",
    "format:check": "prettier \"**/*.{ts,tsx,js,json}\" --list-different",
    "format": "prettier \"**/*.{ts,tsx,js,json}\" --write",
    "bump": "lerna publish --skip-npm --force-publish=*"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "@types/node": "^10.12.18",
    "@types/webpack-env": "^1.14.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-core": "^7.0.0-bridge.0",
    "codecov": "^3.3.0",
    "cross-env": "^5.2.0",
    "del-cli": "^2.0.0",
    "dom-testing-library": "^3.19.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-lerna": "^1.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "fs-extra": "^8.1.0",
    "husky": "^1.1.4",
    "jest": "^24.7.1",
    "jest-junit": "5.2.0",
    "lerna": "^3.16.4",
    "lint-staged": "^8.0.5",
    "npm-run-all": "^4.1.5",
    "preact-testing-library": "^0.3.0",
    "prettier": "^1.14.0",
    "replace-in-file": "^3.4.0",
    "rollup": "^1.20.3",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-generate-package-json": "^2.1.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-typescript2": "^0.24.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
