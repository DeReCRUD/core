{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "clean": "del-cli dist",
    "bootstrap": "lerna bootstrap",
    "lint": "yarn format:check && yarn lint:src && yarn lint:test",
    "lint:src": "tslint --project ./tsconfig.json",
    "lint:test": "tslint --project ./tsconfig.test.json",
    "start": "cross-env ENABLE_LOGGING=true yarn workspace @de-re-crud/schema-builder dev",
    "build": "yarn clean && lerna run build && node ./scripts/replace-dist-css-imports.js",
    "test": "jest",
    "cover": "jest --coverage",
    "format:check": "prettier \"**/*.{ts,tsx,js,json}\" --list-different",
    "format:write": "prettier \"**/*.{ts,tsx,js,json}\" --write",
    "bump": "lerna publish --skip-npm --force-publish=*"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.56",
    "@types/jest": "^23.1.4",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "husky": "^1.1.4",
    "jest": "^23.4.2",
    "lerna": "^2.11.0",
    "lint-staged": "^8.0.5",
    "prettier": "^1.14.0",
    "replace-in-file": "^3.4.0",
    "rollup": "^0.63.5",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-css-only": "^0.4.0",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-generate-package-json": "^2.1.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "ts-jest": "^23.1.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^2.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "prettier --write",
      "git add"
    ],
    "**/!(__tests__|__mocks__)/**/*.{ts,tsx,js}": [
      "yarn lint:src",
      "git add"
    ],
    "**/(__tests__|__mocks__)/**/*.{ts,tsx,js}": [
      "yarn lint:test",
      "git add"
    ]
  },
  "jest": {
    "projects": [
      "<rootDir>/packages"
    ],
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(js|jsx|ts|tsx)?$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "collectCoverageFrom": [
      "packages/**/*.{ts,js}",
      "!packages/**/rollup*",
      "!packages/**/*.d.ts"
    ]
  }
}
