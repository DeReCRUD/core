{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn --silent serve || yarn --silent dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "tslint packages",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "cross-env": "^5.2.0",
    "if-env": "^1.0.0",
    "jest": "^23.2.0",
    "lerna": "^2.11.0",
    "preact-cli": "^2.0.0",
    "preact-cli-plugin-typescript": "^0.2.2",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx|ts|tsx)?$"
  }
}
