    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "optionalDependencies": {
    "bootstrap": "^3.3.7"
  },
  "dependencies": {
    "preact": "^8.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
